lista_numeros = [10, 56, 789, 99, 5, 4, 6, 9, 86, 315, 8, 7, 0, 96, 48, 154, 248, 862, 359]

ordem_crescente = sorted(lista_numeros)
ordem_decrescente = sorted(lista_numeros, reverse=True)

print("Lista de números inteiros")
print(" ")
print(lista_numeros)
print(" ")

lista_ordem = input("Você deseja ver essa lista em ordem Crescente ou Decrescente? ")

if lista_ordem == "Crescente":
  print(ordem_crescente)

elif lista_ordem == "Decrescente":
   print(ordem_decrescente)
